<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CyberEyes.TakePhotoPage">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness">
			<OnPlatform.iOS>
				        0, 20, 0, 0
				      </OnPlatform.iOS>
			<OnPlatform.Android>
				        0, 0, 0, 0
				      </OnPlatform.Android>
			<OnPlatform.WinPhone>
				        0, 0, 0, 0
				      </OnPlatform.WinPhone>
		</OnPlatform>
	</ContentPage.Padding>
	<StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand">
		<Label FontSize="24" Text="Take Photo of: [item name]" HorizontalOptions="CenterAndExpand" />
		<Frame BackgroundColor="Black">
			<Frame BackgroundColor="White">
				<Image x:Name="CameraDisplay" />
			</Frame>
		</Frame>
		<Button Text="Take Photo" Clicked="Handle_TakeClicked" />
	</StackLayout>
</ContentPage>