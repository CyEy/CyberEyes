<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CyberEyes.ScoreModalPage">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness">
			<OnPlatform.iOS>
				        0, 20, 0, 0
				      </OnPlatform.iOS>
			<OnPlatform.Android>
				        0, 0, 0, 0
				      </OnPlatform.Android>
			<OnPlatform.WinPhone>
				        0, 0, 0, 0
				      </OnPlatform.WinPhone>
		</OnPlatform>
	</ContentPage.Padding>
	<StackLayout x:Name="modalSL" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand">
		<Label x:Name="modalLabel" FontSize="24" Text="[Item Name]" HorizontalOptions="CenterAndExpand" />
		<Image x:Name="itemPhoto" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" HeightRequest="200" WidthRequest="200" />
		<Label x:Name="itemMatch" FontSize="20" Text="Match Confidence: 97%" HorizontalOptions="CenterAndExpand" />
		<Label x:Name="otherItems" FontSize="12" Text="Other Item Matches:" HorizontalOptions="CenterAndExpand" />
		<Label x:Name="otherItem1" FontSize="11" Text="Other Item 1: 89%" HorizontalOptions="CenterAndExpand" />
		<Label x:Name="otherItem2" FontSize="11" Text="Other Item 2: 84%" HorizontalOptions="CenterAndExpand" />
		<Button x:Name="close" Text="Close" Clicked="Handle_Clicked" />
	</StackLayout>
</ContentPage>