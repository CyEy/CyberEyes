<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CyberEyes.GamePage">
<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness">
			<OnPlatform.iOS>
				        0, 20, 0, 0
				      </OnPlatform.iOS>
			<OnPlatform.Android>
				        0, 0, 0, 0
				      </OnPlatform.Android>
			<OnPlatform.WinPhone>
				        0, 0, 0, 0
				      </OnPlatform.WinPhone>
		</OnPlatform>
	</ContentPage.Padding>
	<StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand">
		<Label FontSize="24" Text="Cyber Eyes" HorizontalOptions="CenterAndExpand" />
		<Button Text="Submit" 
			Clicked="Handle_SubmitClicked"/>

		<Button Text="Take Picture" 
			Clicked="Handle_OpenCameraClicked"/>

		<Button Text="Picture Details" 
			Clicked="Handle_ScoreModalClicked"/>


	</StackLayout>
</ContentPage>
